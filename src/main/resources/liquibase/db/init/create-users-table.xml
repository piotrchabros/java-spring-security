<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog/1.7"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog/1.7
         http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-1.7.xsd">

    <changeSet id="1" author="itcpc">
        <createTable tableName="users" schemaName="users">
            <column name="id" type="bigint"/>

            <column name="username" type="varchar(255)"/>
            <column name="password" type="varchar(255)"/>

            <column name="name" type="varchar(255)"/>
            <column name="surname" type="varchar(255)"/>
            <column name="email" type="varchar(255)"/>
            <column name="phone" type="varchar(255)"/>
            <column name="company" type="varchar(255)"/>
            <column name="employees" type="varchar(255)"/>
            <column name="country" type="varchar(255)"/>
            <column name="language" type="varchar(255)"/>

            <column name="enabled" type="tinyint(1)"/>
        </createTable>

        <addUniqueConstraint columnNames="id" schemaName="users" tableName="users"/>
        <addAutoIncrement
                          columnDataType="int"
                          columnName="id"
                          schemaName="users"
                          tableName="users"/>
    </changeSet>
</databaseChangeLog>